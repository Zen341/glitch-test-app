<div class="offcanvas offcanvas-start" tabindex="-1" id="Id2" aria-labelledby="staticBackdropLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="staticBackdropLabel">
            List notes
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <!-- <button> -->
    <a class="btn btn-secondary" data-bs-toggle="collapse" href="#search-form-collapse" aria-expanded="false"
        aria-controls="search-form-collapse">
        Filter
    </a>
    <!-- </button> -->
    <div class="collapse" id="search-form-collapse">
        <form id="form-search">
            <div class="mb-3">
                <label for="form-search-title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="form-search-title" placeholder="" />
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="form-search-inner-text" name="innerText" />
                <label class="form-check-label" for="form-search-inner-text">Also search content</label>
            </div>
            <div class="mb-3">
                <label for="form-search-from" class="form-label">From</label>
                <input type="date" class="form-control" name="from" id="form-search-from" placeholder="" />
            </div>
            <div class="mb-3">
                <label for="form-search-to" class="form-label">To</label>
                <input type="date" class="form-control" name="to" id="form-search-to" placeholder="" />
            </div>
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </form>
    </div>

    <div class="offcanvas-body">
        <!-- <div>I will not close if you click outside of me.</div> -->
        <% notes.forEach(element=> { %>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><%= element?.title %></h4>
                    <p class="card-text"><%= (new Date(element?.editAt)).toLocaleString() %></p>
                    <a href="#" class="card-link btn btn-primary">View</a>
                    <a href="#" class="card-link btn btn-success">Edit</a>
                    <a href="#" class="card-link btn btn-danger">Delete</a>
                </div>
            </div>
            <% }) %>

    </div>
</div>